#include <stdio.h>

int main() {
    double t1, t2, t3;
    
    printf("t1: ");
    scanf("%lf", &t1);
    
    printf("t2: ");
    scanf("%lf", &t2);
    
    printf("t3: ");
    scanf("%lf", &t3);
    
    double total_speed = (1.0 / t1) + (1.0 / t2) + (1.0 / t3);
    double total_time = 1.0 / total_speed;
    
    printf("Час, необхідний для з'їдання пирога всіма гостями разом: %.2f години\n", total_time);
    
    return 0;
}
